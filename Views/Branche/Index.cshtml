@using QualificationWork.Models
@model IndexViewModel

@{
    ViewData["Title"] = "NomenclatureList";
}

<h2>NomenclatureList</h2>

<p>
    <a asp-action="Create">Создать новую</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Код филиала
            </th>
            <th>
                Название филиала
            </th>
            <th>
                Директор
            </th>
            <th>
                Адрес
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Дата изменения
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (Branche item in Model.Branches)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id })
                    @Html.ActionLink("Детали", "Details", new { id = item.Id })
                    @*@Html.ActionLink("Удалить", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>

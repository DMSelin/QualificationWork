@using QualificationWork.Models.Helpers
@model QualificationWork.Models.IndexViewModel

@{
    ViewData["Title"] = "NomenclatureList";
}

<h2>NomenclatureList</h2>

<p>
    <a asp-action="Create">Создать новую</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Код номенклатуры
            </th>
            <th>
                Название номенклатуры
            </th>
            <th>
                Дата
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Дата изменения
            </th>
            <th>
                Цена
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (Nomenclature item in Model.Nomenclatures)
        {
            <tr>
                <td>
                    @*@item.Code*@
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id })
                    @Html.ActionLink("Детали", "Details", new { id = item.Id })
                    @*@Html.ActionLink("Удалить", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<br/>
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>

